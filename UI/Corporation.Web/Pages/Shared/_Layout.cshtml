<!DOCTYPE html>

<html lang="ru-ru">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Отчетность Корпорации</title>

    <partial name="Shared/Partial/_StylesPartial" />

    @await RenderSectionAsync("Styles", false)

    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="icon" type="image/png" href="~/favicon.png" sizes="500x500">
    <base href="~/" />
</head>

<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom mb-4">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="favicon.png" alt="Бренд" width="30" height="30" class="d-inline-block align-text-top">
                    Корпорация
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">Информация</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownRaport" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Отчетность
                            </a>
                            <ul class="dropdown-menu bg-info" aria-labelledby="navbarDropdownRaport">
                                <li>
                                    <a asp-page="Index" class="dropdown-item">Отчет по корпорации №1</a>
                                </li>
                                <li>
                                    <a asp-page="Index" class="dropdown-item">Еще Отчет по корпорации №2</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <!--<div class="d-flex">
                        <a class="btn btn-info me-1" href="/online">Онлайн</a>
                    </div>-->
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-dark bg-info">
        <div class="container">
            &copy; 2021 - kanadeiar <a class="text-dark" href="https://github.com/kanadeiar/core">github</a>
        </div>
    </footer>

    <partial name="Shared/Partial/_ScriptsPartial" />

    @await RenderSectionAsync("Scripts", false)
</body>

</html>
