@model IEnumerable<Corporation.Web.Controllers.RoleController.RoleWebModel>
@{
    ViewBag.Title = "Список ролей пользователей";
}

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <partial name="Partial/_AccountLeftSidebarPartial" />
        </div>
        <div class="col-sm-9">
            <h1>@ViewBag.Title</h1>
            <div class="table-responsive border-1 shadow rounded bg-light p-2">
                <div class="my-2">
                    <a asp-controller="Role" asp-action="Create" class="btn btn-success">Создать новую роль пользователей</a>
                </div>
                <table class="table my-2 table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Описание</th>
                            <th>Пользователи</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-center">Нет ролей пользователей</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td>@role.RoleName</td>
                                <td>@role.UsersCount шт.: @role.UsersNames</td>
                                <td class="text-center">
                                    <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id"
                                       class="btn btn-sm btn-warning"><i class="fa fa-edit"></i> Редактировать</a>
                                    <a asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id"
                                       class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
