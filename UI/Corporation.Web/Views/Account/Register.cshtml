@model Corporation.Web.Controllers.AccountController.RegisterWebModel
@{
    ViewBag.Title = "Регистрация";
}

<div class="container">

    <h1>@ViewBag.Title</h1>

    <div class="row">
        <div class="col-sm-6 border-1 shadow rounded bg-light">
            <div>
                <form asp-controller="Account" asp-action="Register" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger alert-danger"></div>

                    <div class="form-group my-1">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Придумайте новый логин пользователя" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group my-1">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Введите действительный адрес своей электронной почты" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group my-1">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Введите ваш пароль пользователя" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group my-1">
                        <label asp-for="PasswordConfirm" class="control-label"></label>
                        <input asp-for="PasswordConfirm" class="form-control" placeholder="Введите Подтверждение пароля" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary my-2">Зарегистрироваться</button>
                </form>
            </div>
        </div>
    </div>
</div>
