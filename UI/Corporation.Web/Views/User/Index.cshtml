@model IEnumerable<Corporation.Web.Controllers.UserController.UserWebModel>
@{
    ViewBag.Title = "Список пользователей";
}

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <partial name="Partial/_AccountLeftSidebarPartial" />
        </div>
        <div class="col-sm-9">
            <h1>@ViewBag.Title</h1>
            <div class="table-responsive border-1 shadow rounded bg-light p-2">
                <div class="my-2">
                    <a asp-controller="User" asp-action="Create" class="btn btn-success">Создать нового пользователя</a>
                </div>
                <table class="table my-2 table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>Фамилия</th>
                        <th>Имя</th>
                        <th>Отчество</th>
                        <th>Логин</th>
                        <th>Почта</th>
                        <th>Возраст</th>
                        <th>Отдел</th>
                        <th>Роли</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="9" class="text-center">Нет пользователей в системе</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.SurName</td>
                                <td>@user.FirstName</td>
                                <td>@user.Patronymic</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.Age</td>
                                <td>@user.Department</td>
                                <td>
                                    @if (!user.RolesNames.Any())
                                    {
                                        <span>Отсутствуют</span>
                                    }
                                    else
                                    {
                                        foreach (var r in user.RolesNames)
                                        {
                                            <span>@r </span>
                                        }
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id"
                                       class="btn btn-sm btn-warning"><i class="fa fa-edit"></i> Редактировать</a>
                                    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id"
                                       class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

